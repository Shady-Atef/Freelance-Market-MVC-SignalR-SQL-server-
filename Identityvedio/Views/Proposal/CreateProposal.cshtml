@model Identityvedio.Models.ProposalViewModel

@{
    ViewBag.Title = "CreateProposal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    

    .area {
        border: none;
        color: #0d0d0d;
        padding: 15px 32px;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 5px;
        width: 90%;
        border: 2px solid #f6f6f6;
        -webkit-transition: all 0.5s ease-in-out;
        -moz-transition: all 0.5s ease-in-out;
        -ms-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        transition: all 0.5s ease-in-out;
        -webkit-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
    }

    input[type=button], input[type=submit], input[type=reset] {
        background-color: rgb(55, 160, 0);
        border: none;
        color: white;
        padding: 15px 32px;
        width: 20%;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        text-transform: capitalize;
        font-size: 16px;
        -webkit-box-shadow: 0 10px 30px 0 rgba(95,186,233,0.4);
        box-shadow: 0 10px 30px 0 rgba(95,186,233,0.4);
        -webkit-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
        margin: 5px 20px 40px 20px;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
        -o-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
    }

    h3 {
        text-align: center;
        font-weight: 600;
        display: inline-block;
        margin: 40px 8px 10px 8px;
    }

    .wrapper {
        
        min-height: 100%;
        padding: 20px;
        background-color: white;
    }

    .drop {
        border: none;
        color: #0d0d0d;
        padding: 15px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 2px;
        width: 20%;
        border: 2px solid #f6f6f6;
        -webkit-transition: all 0.5s ease-in-out;
        -moz-transition: all 0.5s ease-in-out;
        -ms-transition: all 0.5s ease-in-out;
        -o-transition: all 0.5s ease-in-out;
        transition: all 0.5s ease-in-out;
        -webkit-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
    }

    .durationLable {
        margin-bottom: 10px !important;
        color: #222;
        font-weight: 700;
        font-size: 13px;
        text-align: left !important;
        margin: 5px;
    }

    .air-card header, up-c-card header {
        border-bottom: 1px solid #E0E0E0;
    }

    .attachment {
        border-color: rgb(55, 160, 0);
        border-style: dashed;
        border-width: 2px;
        padding-bottom: 20px;
        padding-left: 10px;
        padding-right: 0px;
        padding-top: 20px;
        margin: 10px;
        text-align: center;
        text-size-adjust: 100%;
    }

    #attachment {
        padding-bottom: 20px;
        padding-left: 10px;
        padding-right: 0px;
        padding-top: 20px;
    }

    .fileContainer {
        overflow: hidden;
        position: relative;
        text-decoration: none;
    }

        .fileContainer [type=file] {
            display: block;
            filter: alpha(opacity=0);
            opacity: 0;
            position: absolute;
            right: 0;
            text-align: right;
            top: 0;
        }

    header {
        background-color: rgb(249, 249, 249);
        border-bottom-color: rgb(224, 224, 224);
        border-bottom-style: solid;
        border-bottom-width: 1px;
        box-sizing: border-box;
        color: rgb(34, 34, 34);
        display: block;
        font-family: "Gotham SSm", Helvetica, Arial, sans-serif;
        font-size: 13px;
        height: 88px;
        line-height: 18.5714px;
        margin-bottom: 0px;
        margin-left: -30px;
        margin-right: -30px;
        margin-top: 0px;
        padding-bottom: 30px;
        padding-left: 30px;
        padding-right: 30px;
        padding-top: 30px;
        text-size-adjust: 100%;
        -webkit-box-direction: normal;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
</style>

    <div class="site-section bg-light">
        <div class="container">
            <div class="wrapper fadeInDown">
                <h3>Create Proposal</h3>
                @*<form action="\Proposal\CreateProposal" method="post">*@
                <div class="form-group">

                    <div class="modal-body">
                        @using (Html.BeginForm("CreateProposal", "Proposal", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div style="padding-bottom:10px;">
                                <p class="durationLable">How long will this project take?</p>
                                @Html.DropDownListFor(m => m.Duration, new MultiSelectList(new[] { "Less than 1 week", "Less than 2 week", "Less than 3 week", "Less than month" }), new { @class = " drop" })
                            </div>
                            <header>
                                <h2 class="m-0">
                                    Additional details
                                </h2>
                            </header>
                            <div>
                                @Html.LabelFor(m => m.proposal, "Cover Letter", new { @style = "color: #000; padding: 15px 15px 0px 5px " })
                                @Html.TextAreaFor(m => m.proposal, new { @class = "form-control area", @style = "min-width: 100%; ", @rows = "10", @id = "comment" })
                            </div>
                            @*<textarea class="form-control area" style="min-width: 100%; " rows="10" id="comment" name="proposalMsg"></textarea>*@
                            <div id="attachment">
                                <label for="attachment" class="control-label">
                                    Attachments <span class="text-muted d-none d-sm-none">(Optional)</span>
                                </label>
                                <div class="attachment">
                                    Click here
                                    <a class="fileContainer">
                                        uploade File
                                        @Html.TextBoxFor(m => m.FilePath, new { type = "file" })
                                    </a>
                                </div>
                            </div>
                            <div>

                                <input type="hidden" value="@ViewBag.id" name="id" />

                                <input id="Apply" type="submit" value="Submit Proposal" />
                                <input type="button" value="Cancel" onclick="window.location='@Url.Action("Index", "Job")'" />
                            </div>


                        }

                    </div>
                </div>


                @*</form>*@
            </div>
        </div>
    </div>
                <script type="text/javascript">

                    $(document).ready(function () {
                        $('#Apply').prop('disabled', true);
                        $("#FilePath").change(function () {
                            // Get uploaded file extension
                            var extension = $(this).val().split('.').pop().toLowerCase();
                            // Create array with the files extensions that we wish to upload
                            var validFileExtensions = ['doc', 'docx', 'pdf'];
                            //Check file extension in the array.if -1 that means the file extension is not in the list.
                            if ($.inArray(extension, validFileExtensions) == -1) {
                                alert("Sorry!! Upload only 'doc', 'docx', 'pdf' file")
                                // Clear fileuload control selected file
                                $(this).replaceWith($(this).val('').clone(true));
                                //Disable Submit Button
                                $('#Apply').prop('disabled', true);
                            } else {
                                // Check and restrict the file size to 128 KB.
                                if ($(this).get(0).files[0].size > (131072)) {
                                    alert("Sorry!! Max allowed file size is 128 kb");
                                    // Clear fileuload control selected file
                                    $(this).replaceWith($(this).val('').clone(true));
                                    //Disable Submit Button
                                    $('#Apply').prop('disabled', true);
                                } else {
                                    //Enable Submit Button
                                    $('#Apply').prop('disabled', false);
                                }
                            }
                        });
                    });
                </script>

